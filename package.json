{
  "name": "@massimo-cassandro/scss-utilities",
  "description": "Collection of scss utilities",
  "version": "1.1.0",
  "license": "MIT",
  "author": "Massimo Cassandro",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/massimo-cassandro/scss-utilities.git#main"
  },
  "bugs": {
    "url": "https://github.com/scss-utilities/issues"
  },
  "homepage": "https://github.com/scss-utilities#readme",
  "keywords": [
    "scss"
  ],
  "scripts": {
    "UPD-version": "npx update-version",
    "upd @m": "npm update @massimo-cassandro/linters-config @massimo-cassandro/dev-utilities",
    "npm publish": "npm publish"
  },
  "browserslist": [
    "last 1 version",
    "iOS >= 13",
    "Safari >= 12",
    "not ie <= 11",
    "> 3% in IT"
  ],
  "stylelint": {
    "extends": "@massimo-cassandro/linters-config/stylelintrc.js",
    "ignoreFiles": [
      "./front-end/test/TEST-custom-properties-list.css"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "./node_modules/@massimo-cassandro/linters-config/eslintrc.js"
    ],
    "ignorePatterns": []
  },
  "files": [
    "scss-*/**/*.{scss,css,map}",
    "bootstrap-utilities/**/*.{scss,css,map}"
  ],
  "devDependencies": {
    "@massimo-cassandro/dev-utilities": "^1.9.4",
    "@massimo-cassandro/linters-config": "^1.6.0"
  }
}
